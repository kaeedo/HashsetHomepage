<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk.Web">
  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <ProduceReferenceAssembly>false</ProduceReferenceAssembly>
    <TargetFramework>net7.0</TargetFramework>
    <EnableDefaultContentItems>false</EnableDefaultContentItems>
    <PackageLicenseExpression>MPL-2.0</PackageLicenseExpression>
    <WarningsAsErrors>FS0025</WarningsAsErrors>
  </PropertyGroup>
  <ItemGroup>
    <ProjectReference Include="../DataAccess/DataAccess.fsproj" />
    <ProjectReference Include="../Model/Model.fsproj" />
  </ItemGroup>
  <ItemGroup>
    <Compile Include="Views/Master.fs" />
    <Compile Include="Views/LatestArticles.fs" />
    <Compile Include="Views/About.fs" />
    <Compile Include="Views/Article.fs" />
    <Compile Include="Views/Upsert.fs" />
    <Compile Include="Articles.fs" />
    <Compile Include="Syndication.fs" />
    <Compile Include="Authentication.fs" />
    <Compile Include="Controller.fs" />
    <Compile Include="Program.fs" />
    <Content Include="WebRoot/**/*">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="posts/**/*">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="appsettings.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Fun.Blazor.Server" Version="3.2.8" />
    <PackageReference Include="Giraffe" Version="6.0.0" />
    <PackageReference Include="FSharp.Literate" Version="4.1.0" />
    <PackageReference Include="LigerShark.WebOptimizer.Core" Version="3.0.396" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Json" Version="7.0.0-preview.1.22076.8" />
    <PackageReference Include="Microsoft.Extensions.Configuration.UserSecrets" Version="7.0.0-preview.1.22076.8" />
    <PackageReference Update="FSharp.Core" Version="8.0.100" />
  </ItemGroup>
</Project>
